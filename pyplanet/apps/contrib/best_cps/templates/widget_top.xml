{% extends 'core.views/uikit/v1/widget.xml' %}


    {% block content %}
      {% if cps != None %}
        {% for time in cps %}
          {% if loop.index0 < 18 %}
            <frame pos="{% if (time.index-1) % 6 == 0 %}35.65{% else %}{{ ((time.index-1) % 6 * 35.65)+35.65 }}{% endif %} -{{ ( (time.index-1) // 6 * 3.5) -3.5}} ">
              <quad pos="4 0" z-index="0" size="0.25 3" bgcolor="{{ time.color }}"/>
              <quad pos="0 0" z-index="0" size="4 3" bgcolor="00202090"/>
              <label pos="2 -1.5" z-index="1" size="4 3" text="{{ time.index }}" textsize="0.3" textfont="RajdhaniMono"  textemboss="1" halign="center" valign="center2"/>
              <quad pos="0 0" z-index="0" size="35 3" bgcolor="00300070" bgcolorfocus="00500070" action="pyplanet__widgets_currentcps__spec_{{ time.login }}"/>
              <label pos="4.5 -1.5" z-index="1" size="20 3" text="$t$i{{ time.nickname }}" textsize="0.2" textemboss="0" halign="left" valign="center2" />
              <label pos="30 -1.5" z-index="1" size="10 3" text="${{ time.color }}{{ time.cptime }}" textsize="0.2" textfont="RajdhaniMono"  textemboss="1" halign="center" valign="center2"/>
            </frame>
          {% endif %}
        {% endfor %}
      {% endif %}
    {% endblock %}

