{% extends 'core.views/generics/widget.xml' %}

{% block content %}
    <label id="fps" text="n/a" pos="0 3" size="40 4" textsize="1" textfont="RajdhaniMono"/>
    {% for time in range(0, records_amount) %}
      <frame id="pos_{{ loop.index0 }}" pos="0 -{{ (loop.index0 * 3.25) }}">
                <!-- # label cp -->
        <quad pos="0 0" z-index="0" size="4 3" bgcolor="00000070"/>
        <label pos="2 -1.5" z-index="1" size="4 3" textsize="0.3" textfont="RajdhaniMono"
               textemboss="1" halign="center" valign="center2"/>
         <!-- label nickname -->
        <quad pos="4.25 0" z-index="0" size="20.5 3" bgcolor="00000070" class="toggleSpec" data-position="{{ loop.index0 }}" scriptevents="1" />
        <label pos="4.5 -1.5" z-index="1" size="20 3" textsize="0.2" textfont="RajdhaniMono"
               textemboss="1" halign="left" valign="center2" style="TextCardSmall" class="toggleSpec" data-position="{{ loop.index0 }}" scriptevents="1" />
         <!-- label time -->
        <quad pos="25 0" z-index="0" size="10 3" bgcolor="00000070" />

        <label pos="30 -1.5" z-index="1" size="10 3" textsize="0.2"
               textfont="RajdhaniMono" textemboss="1" halign="center" valign="center2"/>
      </frame>
    {% endfor %}
{% endblock %}


{% block maniascript %}
    <script><!-- {% include 'currentcps2/cp.Script.Txt' %} --></script>
{% endblock %}
