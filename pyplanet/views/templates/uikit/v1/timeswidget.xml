{% extends 'core.views/uikit/v1/widget.xml' %}

{% block content %}
  {% if times != None %}
    {% for time in times %}
      <frame pos="0 -{{ (loop.index0 * 3.25) }}">
        <quad pos="4 0" z-index="0" size="0.25 3" bgcolor="{{ time.color }}"/>
        <quad pos="0 0" z-index="0" size="4 3" bgcolor="00202090"/>
        <label pos="2 -1.5" z-index="1" size="4 3" text="{{ time.index }}" textsize="0.3" textfont="RajdhaniMono"  textemboss="1" halign="center" valign="center2"/>
        <quad pos="0 0" z-index="0" size="35 3" bgcolor="00300070"/>
        <label pos="4.5 -1.5" z-index="1" size="20 3" text="$t$i {{ time.nickname }}" textsize="0.25" textemboss="0" halign="left" valign="center2"/>
        <!-- <quad pos="25 0" z-index="0" size="10 3" bgcolor="00000070"/> -->
        <label pos="30 -1.5" z-index="1" size="10 3" text="{{ time.score }}" textprefix="${{ time.color }}" textsize="0.2" textfont="RajdhaniMono"  textemboss="0" halign="center" valign="center2"/>
      </frame>
    {% endfor %}
  {% endif %}
{% endblock %}
