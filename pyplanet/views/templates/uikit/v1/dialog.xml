{% extends 'core.views/uikit/v1/generics/bootstrap.xml' %}

{% block main %}
<frame pos="-160 90" z-index="200"> <!-- set z-index high enough -->
	<frame pos="160 -90"> <!-- reset to 0,0 -->
  <frame pos="-60 70"> <!-- window position -->
      {% block header %}
              <label id="Title" pos="2 -2" textsize="2.5" text="$i$t{{title}}" halign="left" valign="top"
               textprefix="{{icon}}  " textfont="RajdhaniMono"/>
          {{ ui.button_basic("x", id+"__button_close", 114, 0, 6, 6, "closeButton") }}
       <quad pos="0 0" size="120 8" bgcolor="000a"/>
      {% endblock %}
      <frame pos="0 -8">
        {% block contents %} {% endblock %}
      </frame>
      <quad pos="60 0" size="120 140" bgcolor="008040f0" halign="center"/>
    </frame>
	</frame>
  <!-- this is to disable other controls from clicking -->
  <quad size="320 180" bgcolor="0000" scriptevents="1"/>
</frame>
{% endblock %}
